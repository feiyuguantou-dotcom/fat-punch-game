/* pages/index/index.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFE5EC 0%, #FFF5F7 100%);
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  text-align: center;
  padding: 60rpx 0 80rpx;
}

.header-title {
  font-size: 64rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
}

/* 内容区样式 */
.content {
  padding: 0 20rpx;
}

/* CTA按钮通用样式 */
.main-cta,
.secondary-cta,
.community-cta {
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8px 24px rgba(255, 107, 157, 0.12);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.main-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #FF6B9D 0%, #FF4081 100%);
}

.secondary-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #FFB6C1 0%, #FF6B9D 100%);
}

.community-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #B6CFFF 0%, #9CB6FF 100%);
}

.main-cta:active,
.secondary-cta:active,
.community-cta:active {
  transform: scale(0.98);
  box-shadow: 0 4px 12px rgba(255, 107, 157, 0.2);
}

.cta-icon {
  font-size: 88rpx;
  text-align: center;
  margin-bottom: 24rpx;
}

.cta-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 12rpx;
}

.cta-subtitle {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 底部样式 */
.footer {
  text-align: center;
  padding: 80rpx 0 40rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #FF6B9D;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.footer-subtext {
  font-size: 24rpx;
  color: #999;
}

/* 引导弹窗样式 */
.guide-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.guide-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.guide-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}

.guide-swiper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 700rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
}

.guide-item {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.guide-icon {
  font-size: 160rpx;
  margin-bottom: 48rpx;
}

.guide-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 24rpx;
}

.guide-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.8;
}

.guide-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.guide-dots {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ddd;
  margin: 0 8rpx;
  transition: all 0.3s ease;
}

.dot.active {
  width: 32rpx;
  border-radius: 8rpx;
  background: #FF6B9D;
}

.guide-btn {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #666;
  border: none;
  transition: all 0.3s ease;
}

.guide-btn.primary {
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  color: #fff;
}

.guide-skip {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin-top: 24rpx;
  padding: 16rpx;
}
