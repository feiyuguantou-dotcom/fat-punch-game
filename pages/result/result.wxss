/* pages/result/result.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFE5EC 0%, #FFF5F7 100%);
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}

/* 成功头部 */
.success-header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.success-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: bounceIn 0.6s ease-out;
}

@keyframes bounceIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.success-title {
  font-size: 56rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 16rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 卡片容器 */
.card-container {
  margin-bottom: 48rpx;
}

.result-card {
  background: linear-gradient(135deg, #fff 0%, #FFF5F7 100%);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 12px 32px rgba(255, 107, 157, 0.2);
  animation: slideUp 0.8s ease-out;
  position: relative;
  overflow: hidden;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.result-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #FF6B9D 0%, #FF4081 100%);
}

/* 卡片头部 */
.card-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.card-emoji {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #FF6B9D;
}

/* 卡片内容 */
.card-content {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.card-message {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  line-height: 1.8;
}

/* 卡片统计 */
.card-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 80rpx;
  background: #eee;
}

/* 卡片底部 */
.card-footer {
  padding-top: 24rpx;
  text-align: center;
}

.footer-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.footer-date {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 48rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.primary {
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  color: #fff;
  box-shadow: 0 8px 16px rgba(255, 107, 157, 0.3);
}

.action-btn.secondary {
  background: #fff;
  color: #FF6B9D;
  border: 2rpx solid #FF6B9D;
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 高级功能 */
.premium-features {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #FFF5F7;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.feature-item:active {
  transform: scale(0.98);
  background: #FFE5EC;
}

.feature-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.feature-info {
  flex: 1;
}

.feature-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #999;
}

.feature-price {
  font-size: 28rpx;
  font-weight: 700;
  color: #FF6B9D;
  padding: 8rpx 16rpx;
  background: #fff;
  border-radius: 16rpx;
}

/* 分享引导 */
.share-guide {
  text-align: center;
  padding: 40rpx 0;
}

.guide-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.guide-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.share-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.share-btn {
  width: 280rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 48rpx;
  border: 2rpx solid #FF6B9D;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.share-btn:active {
  transform: scale(0.95);
  background: #FFF5F7;
}

.share-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.share-text {
  color: #FF6B9D;
  font-weight: 600;
}

/* 海报弹窗 */
.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.poster-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  overflow-y: auto;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
}

.poster-canvas {
  width: 500rpx;
  height: 888rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  margin: 0 auto 32rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  color: #fff;
}

.modal-btn.secondary {
  background: #f5f5f5;
  color: #666;
}
