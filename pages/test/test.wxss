/* pages/test/test.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFE5EC 0%, #FFF5F7 100%);
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.header-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: bounceIn 0.6s ease-out;
}

@keyframes bounceIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #eee;
  border-radius: 4rpx;
  margin-bottom: 48rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF6B9D 0%, #FF4081 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 问题容器 */
.question-container {
  animation: slideUp 0.4s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(30rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.question-number {
  font-size: 24rpx;
  color: #FF6B9D;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.question-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.6;
  margin-bottom: 48rpx;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 48rpx;
}

.option-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  position: relative;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.selected {
  border-color: #FF6B9D;
  background: #FFF5F7;
}

.option-label {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 50%;
  font-size: 22rpx;
  color: #666;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.option-item.selected .option-label {
  background: #FF6B9D;
  color: #fff;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.option-check {
  position: absolute;
  top: 50%;
  right: 32rpx;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  background: #FF6B9D;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 下一题按钮 */
.next-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8px 16px rgba(255, 107, 157, 0.3);
}

.next-btn:active {
  transform: scale(0.98);
}

.next-btn[disabled] {
  background: #ddd;
  box-shadow: none;
}

/* 结果容器 */
.result-container {
  animation: slideUp 0.6s ease-out;
}

.result-icon {
  font-size: 160rpx;
  text-align: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-align: center;
  margin-bottom: 12rpx;
}

.result-subtitle {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-bottom: 48rpx;
}

/* 结果卡片 */
.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4px 12px rgba(255, 107, 157, 0.1);
}

.card-section {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.section-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #FF6B9D 0%, #FF4081 100%);
  color: #fff;
  box-shadow: 0 8px 16px rgba(255, 107, 157, 0.3);
}

.action-btn.secondary {
  background: #fff;
  color: #FF6B9D;
  border: 2rpx solid #FF6B9D;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 重试按钮 */
.retry-btn {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 48rpx;
  color: #999;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.retry-btn:active {
  background: #eee;
}
